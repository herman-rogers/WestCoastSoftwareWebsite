<div class="container notify">
  <div class="row">
      {{#each notification in notifications}}
          {{#if notification.error}}
            <div class="alert alert-danger">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true"
                  {{action 'closeAlert' notification}}>
                ×
              </button>
             <strong style="text-align: center">{{notification.title}}</strong>
              <hr class="message-inner-separator">
                {{#each message in notification.message}}
                  <p style="text-align: center">
                    <b>{{message.field}}</b>{{#if message.value}}: {{message.value}}{{/if}}
                  </p>
                {{/each}}
            </div>
          {{else}}
            <div class="alert alert-info">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true"
                  {{action 'closeAlert' notification}}>
                ×
              </button>
              <strong style="text-align: center">{{notification.title}}</strong>
              <hr class="message-inner-separator">
              <p style="text-align: center">{{format-text notification.message}}</p>
            </div>
          {{/if}}
      {{/each}}
  </div>
</div>